# Application
APP_NAME=Wine Collector API
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/wine_collector

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Storage (Cloudflare R2)
# 1. R2 대시보드 → 버킷 생성 → 버킷 이름 설정
# 2. R2 대시보드 → API 토큰 관리 → S3 API 토큰 생성 (읽기/쓰기 권한)
# 3. 버킷 설정 → 퍼블릭 액세스 허용 또는 커스텀 도메인 연결
STORAGE_TYPE=r2
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-s3-api-access-key
R2_SECRET_ACCESS_KEY=your-r2-s3-api-secret-key
R2_BUCKET_NAME=wine-collector
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# Image cache duration (seconds). Default: 7 days (604800)
R2_CACHE_MAX_AGE=604800

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
